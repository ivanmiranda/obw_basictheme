<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="customer_account_create_head_components" template="Magento_Customer::js/components.phtml"/>
        </referenceBlock>
        <referenceContainer name="content">
            <!-- customer.form.create.extra -->
            <referenceContainer name="customer.login.container" label="Customer Login Container" htmlTag="div" htmlClass="login-container">
                <container name="content.login.social.row" htmlTag="div" htmlClass="row">
                    <container name="content.login.social" label="Customer Login and Social connect" htmlTag="div" htmlClass="content-login-social col-xs-12 col-md-6">
                    </container>
                    <block class="Magento\Customer\Block\Form\Register" name="customer_form_register" template="form/register.phtml" after="-">
                        <container name="form.additional.info" as="form_additional_info"/>
                        <container name="customer.form.register.fields.before" as="form_fields_before" label="Form Fields Before" htmlTag="div" htmlClass="customer-form-before"/>
                    </block>
                    <referenceBlock name="customer.new" remove="true"/>
                </container>
            </referenceContainer>
            <referenceBlock class="Magento\Cookie\Block\RequireCookie" name="require-cookie" template="Magento_Cookie::require_cookie.phtml">
                <arguments>
                    <argument name="triggers" xsi:type="array">
                        <item name="registerSubmitButton" xsi:type="string">.action.submit</item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
        <move element="customer_form_login" destination="content.login.social" before="-"/>    
        <move element="social-login-popup-authentication-social-login" destination="content.login.social" after="-"/>
    </body>
</page>