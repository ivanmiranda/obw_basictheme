<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container name="customer.login.container" label="Customer Login Container" htmlTag="div" htmlClass="login-container container-fluid">
                <container name="content.login.social.row" htmlTag="div" htmlClass="row">
                        <container name="content.login.social" label="Customer Login and Social connect" htmlTag="div" htmlClass="content-login-social col-xs-12 col-md-6">
                            <block class="Magento\Customer\Block\Form\Login" name="customer_form_login" template="form/login.phtml" before="customer_form_register">
                                <container name="form.additional.info" as="form_additional_info"/>
                            </block>
                            <!--<block class="Mageplaza\SocialLogin\Block\Popup\Authentication\Social" after="-" name="social-login-popup-authentication-social-create" ifconfig="sociallogin/general/is_enabled" template="Mageplaza_SocialLogin::form/social.phtml" cacheable="false"/>-->
                        </container>
                        <block class="Magento\Customer\Block\Form\Register" name="customer_form_register" template="form/register.phtml" after="-">
                            <container name="form.additional.info" as="form_additional_info"/>
                            <container name="customer.form.register.fields.before" as="form_fields_before" label="Form Fields Before" htmlTag="div" htmlClass="customer-form-before"/>
                        </block>
                </container>
            </container>
            <referenceBlock class="Magento\Cookie\Block\RequireCookie" name="require-cookie" template="Magento_Cookie::require_cookie.phtml">
                <arguments>
                    <argument name="triggers" xsi:type="array">
                        <item name="loginButton" xsi:type="string">.action.login</item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
